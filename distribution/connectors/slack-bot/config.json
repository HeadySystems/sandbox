{
  "name": "heady-slack-bot",
  "version": "0.1.0",
  "description": "Heady AI bot for Slack â€” chat, summarize, agent tasks from any channel",
  "platform": "slack",
  "auth": {
    "type": "oauth2",
    "env_vars": {
      "bot_token": "SLACK_BOT_TOKEN",
      "signing_secret": "SLACK_SIGNING_SECRET",
      "app_token": "SLACK_APP_TOKEN"
    },
    "scopes": {
      "bot": ["app_mentions:read", "chat:write", "channels:read", "channels:history", "im:read", "im:write", "reactions:read", "files:read", "users:read"]
    }
  },
  "features": {
    "slash_commands": ["/heady", "/heady-summarize", "/heady-agent"],
    "events": ["app_mention", "message.im"],
    "shortcuts": ["summarize_thread", "ask_heady"],
    "home_tab": true
  },
  "deployment": {
    "docker_service": "heady-slack-bot",
    "port": 4200,
    "health": "/health"
  }
}

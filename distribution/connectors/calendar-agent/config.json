{
  "name": "heady-calendar-agent",
  "version": "0.1.0",
  "description": "Heady AI calendar agent â€” Google Calendar and Outlook sync",
  "auth": {
    "google": {
      "type": "oauth2",
      "env_vars": { "client_id": "GOOGLE_CLIENT_ID", "client_secret": "GOOGLE_CLIENT_SECRET" },
      "scopes": ["https://www.googleapis.com/auth/calendar"]
    },
    "microsoft": {
      "type": "oauth2",
      "env_vars": { "client_id": "MS_CLIENT_ID", "client_secret": "MS_CLIENT_SECRET", "tenant_id": "MS_TENANT_ID" },
      "scopes": ["Calendars.ReadWrite"]
    }
  },
  "features": {
    "list_events": true,
    "create_events": true,
    "reschedule": true,
    "find_free_time": true,
    "meeting_prep": true,
    "daily_brief": true
  },
  "deployment": {
    "docker_service": "heady-calendar-agent",
    "port": 4204,
    "health": "/health"
  }
}

{
  "manifest_version": 2,
  "name": "Heady AI Assistant",
  "version": "0.1.0",
  "description": "AI sidebar for every page â€” summarize, explain, research, automate with Heady",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "sidebar_action": {
    "default_title": "Heady AI",
    "default_panel": "sidepanel.html",
    "default_icon": {
      "16": "icons/heady-16.png",
      "32": "icons/heady-32.png",
      "48": "icons/heady-48.png"
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/heady-16.png",
      "32": "icons/heady-32.png",
      "48": "icons/heady-48.png",
      "128": "icons/heady-128.png"
    },
    "default_title": "Heady AI"
  },
  "icons": {
    "16": "icons/heady-16.png",
    "32": "icons/heady-32.png",
    "48": "icons/heady-48.png",
    "128": "icons/heady-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Toggle Heady AI sidebar"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "heady-ai@headysystems.com",
      "strict_min_version": "109.0"
    }
  }
}

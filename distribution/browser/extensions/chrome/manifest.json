{
  "manifest_version": 3,
  "name": "Heady AI Assistant",
  "version": "0.1.0",
  "description": "AI sidebar for every page â€” summarize, explain, research, automate with Heady",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/heady-16.png",
      "32": "icons/heady-32.png",
      "48": "icons/heady-48.png",
      "128": "icons/heady-128.png"
    },
    "default_title": "Heady AI"
  },
  "icons": {
    "16": "icons/heady-16.png",
    "32": "icons/heady-32.png",
    "48": "icons/heady-48.png",
    "128": "icons/heady-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Toggle Heady AI sidebar"
    },
    "ask_heady": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Ask Heady about selected text"
    }
  },
  "options_page": "options.html"
}
